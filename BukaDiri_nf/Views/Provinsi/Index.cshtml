@model IEnumerable<BukaDiri_nf.Models.Provinsi>
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-pills justify-content-end">
    <li class="nav-item">
        <a class="nav-link active" href="/Home/Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Settings/Index">Settings</a>
    </li>
</ul>

<ul class="nav nav-tabs justify-content-center mt-2">
    <li class="nav-item">
        <a class="nav-link active" href="/Provinsi/Index">Provinsi</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Pilihan/Index">Pilihan</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Lapak/Index">Lapak</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Item/Index">Item</a>
    </li>
</ul>

<div class="text-center">
    <h2>Data Provinsi</h2>
</div>

<a href="/Provinsi/Tambah" class="btn btn-primary mb-2"><i class="fa fa-plus mr-1"></i>Tambah</a>

<table class="table table-striped table-hover" >
    <thead>
        <th>Kode Provinsi</th>
        <th>Nama Provinsi</th>
        <th>Aksi</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                <td>@item.kodeProvinsi</td>
                <td>@item.namaProvinsi</td>
                <td>
                    <a href="/Provinsi/Lihat/@item.kodeProvinsi" class="btn btn-primary mr-2"><i class="fa fa-eye mr-1"></i>Lihat</a>
                    <a href="/Provinsi/Edit/@item.kodeProvinsi" class="btn btn-primary mr-2"><i class="fa fa-pencil mr-1"></i>Edit</a>
                    <a href="/Provinsi/Hapus/@item.kodeProvinsi" class="btn btn-danger mr-2"><i class="fa fa-trash mr-1"></i>Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>



