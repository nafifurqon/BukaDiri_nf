@model IEnumerable<BukaDiri_nf.Models.Item>
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-pills justify-content-end">
    <li class="nav-item">
        <a class="nav-link active" href="/Home/Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Settings/Index">Settings</a>
    </li>
</ul>

<ul class="nav nav-tabs justify-content-center mt-2">
    <li class="nav-item">
        <a class="nav-link" href="/Provinsi/Index">Provinsi</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Pilihan/Index">Pilihan</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Lapak/Index">Lapak</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/Item/Index">Item</a>
    </li>
</ul>

<div class="text-center">
    <h2>Data Item</h2>
</div>

<a href="/Item/Tambah" class="btn btn-primary mb-2"><i class="fa fa-plus mr-1"></i>Tambah</a>

<table class="table table-striped table-hover">
    <thead>
    <th>Kode Item</th>
    <th>Nama Item</th>
    <th>Aksi</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.kodeItem</td>
                <td>@item.namaItem</td>
                <td>
                    <a href="/Item/Lihat/@item.kodeItem" class="btn btn-primary mr-2"><i class="fa fa-eye mr-1"></i>Lihat</a>
                    <a href="/Item/Edit/@item.kodeItem" class="btn btn-primary mr-2"><i class="fa fa-pencil mr-1"></i>Edit</a>
                    <a href="/Item/Hapus/@item.kodeItem" class="btn btn-danger mr-2"><i class="fa fa-trash-o mr-1"></i>Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>

