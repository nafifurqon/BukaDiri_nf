@model IEnumerable<BukaDiri_nf.Models.Pilihan>
@{
    ViewBag.Title = "Index";
}

<ul class="nav nav-pills justify-content-end">
    <li class="nav-item">
        <a class="nav-link active" href="/Home/Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Settings/Index">Settings</a>
    </li>
</ul>

<ul class="nav nav-tabs justify-content-center mt-2">
    <li class="nav-item">
        <a class="nav-link" href="/Provinsi/Index">Provinsi</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/Pilihan/Index">Pilihan</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Lapak/Index">Lapak</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Item/Index">Item</a>
    </li>
</ul>

<div class="text-center">
    <h2>Data Pilihan</h2>
</div>

<a href="/Pilihan/Tambah" class="btn btn-primary mb-2"><i class="fa fa-plus mr-1"></i>Tambah</a>

<table class="table table-striped table-hover">
    <thead>
    <th>Kode Pilihan</th>
    <th>Nama Pilihan</th>
    <th>Aksi</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.kodePilihan</td>
                <td>@item.namaPilihan</td>
                <td>
                    <a href="/Pilihan/Lihat/@item.kodePilihan" class="btn btn-primary mr-2"><i class="fa fa-eye mr-1"></i>Lihat</a>
                    <a href="/Pilihan/Edit/@item.kodePilihan" class="btn btn-primary mr-2"><i class="fa fa-pencil mr-1"></i>Edit</a>
                    <a href="/Pilihan/Hapus/@item.kodePilihan" class="btn btn-danger mr-2"><i class="fa fa-trash mr-1"></i>Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>

